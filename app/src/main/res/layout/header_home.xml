<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/header_home_iv_header_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:contentDescription="@null" />

    <LinearLayout
        android:id="@+id/header_home_ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_5"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/header_ib_menu"
            style="@style/IVHeader"
            android:contentDescription="@null"
            android:minWidth="@dimen/dimen_50"
            android:src="@drawable/ic_menu" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/header_tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/StyleTextView"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/montserrat_bold"
            android:text="Tambola Tickets"
            />

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/rlCount"
            android:layout_width="@dimen/dimen_45"
            android:layout_marginEnd="@dimen/dimen_5"
            android:layout_height="match_parent">

            <!-- Menu Item Image -->
            <ImageView
                android:id="@+id/ivCart"
                style="@style/IVHeader"
                android:layout_marginStart="@dimen/dimen_5"
                android:contentDescription="@null"
                android:src="@drawable/ic_search_white_24dp" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout><!--android:background="?attr/colorPrimary"-->

