<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/header_home_iv_header_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:contentDescription="@null" />

    <LinearLayout
        android:id="@+id/header_home_ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_5"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/header_iv_back"
            style="@style/IVHeader"
            android:contentDescription="@null"
            android:minWidth="@dimen/dimen_50"
            android:src="@drawable/ic_back_white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/header_tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/StyleTextView"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/app_name"
            />
        <ImageView
            style="@style/IVHeader"
            android:contentDescription="@null"
            android:minWidth="@dimen/dimen_50"
            android:visibility="invisible"
            android:src="@drawable/ic_back_white" />
    </LinearLayout>
</RelativeLayout><!--android:background="?attr/colorPrimary"-->

