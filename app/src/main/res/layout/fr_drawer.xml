<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen_16"
        android:paddingEnd="@dimen/dimen_16">


        <TextView
            android:id="@+id/tvUser"
            style="@style/StyleTextView"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="@dimen/font_16"
            android:textColor="@color/colorWhite"
            android:visibility="visible" />
    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/llTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dimen_16"
                android:paddingTop="@dimen/dimen_12"
                android:paddingEnd="@dimen/dimen_16"
                android:paddingBottom="@dimen/dimen_12"
                android:visibility="gone"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/dimen_25"
                    android:layout_height="@dimen/dimen_25"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_product" />

                <TextView
                    style="@style/StyleTextView"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/dimen_12"
                    android:gravity="start|center"
                    android:text="Ticket"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorWhite"/>

            <LinearLayout
                android:id="@+id/llDashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dimen_16"
                android:paddingTop="@dimen/dimen_12"
                android:paddingEnd="@dimen/dimen_16"
                android:paddingBottom="@dimen/dimen_12"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/dimen_25"
                    android:layout_height="@dimen/dimen_25"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_customer" />

                <TextView
                    style="@style/StyleTextView"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/dimen_12"
                    android:gravity="start|center"
                    android:text="Dashboard"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorWhite"/>


            <LinearLayout
                android:id="@+id/llTicketTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dimen_16"
                android:paddingTop="@dimen/dimen_12"
                android:paddingEnd="@dimen/dimen_16"
                android:paddingBottom="@dimen/dimen_12"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/dimen_25"
                    android:layout_height="@dimen/dimen_25"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_invoice" />

                <TextView
                    style="@style/StyleTextView"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/dimen_12"
                    android:gravity="start|center"
                    android:text="Ticket Transaction"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorWhite"/>

            <LinearLayout
                android:id="@+id/llClaimRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dimen_16"
                android:paddingTop="@dimen/dimen_12"
                android:paddingEnd="@dimen/dimen_16"
                android:paddingBottom="@dimen/dimen_12"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/dimen_25"
                    android:layout_height="@dimen/dimen_25"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_exit" />

                <TextView
                    style="@style/StyleTextView"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/dimen_12"
                    android:gravity="start|center"
                    android:text="Claim Request"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorWhite"/>

            <LinearLayout
                android:id="@+id/llWalletRecharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dimen_16"
                android:paddingTop="@dimen/dimen_12"
                android:paddingEnd="@dimen/dimen_16"
                android:paddingBottom="@dimen/dimen_12"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/dimen_25"
                    android:layout_height="@dimen/dimen_25"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_exit" />

                <TextView
                    style="@style/StyleTextView"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/dimen_12"
                    android:gravity="start|center"
                    android:text="Wallet Recharge"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorWhite"/>

            <LinearLayout
                android:id="@+id/llLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dimen_16"
                android:paddingTop="@dimen/dimen_12"
                android:paddingEnd="@dimen/dimen_16"
                android:paddingBottom="@dimen/dimen_12"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="@dimen/dimen_25"
                    android:layout_height="@dimen/dimen_25"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_exit" />

                <TextView
                    style="@style/StyleTextView"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/dimen_12"
                    android:gravity="start|center"
                    android:text="Logout"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorWhite"/>

            </LinearLayout>

    </ScrollView>


</RelativeLayout>