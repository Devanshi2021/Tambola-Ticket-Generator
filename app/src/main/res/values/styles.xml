<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="StyleStatusBarTransparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>


    <style name="toolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="android:colorBackground">@android:color/holo_blue_light</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>


    <style name="StyleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorFontDarkGray</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="HomeStyleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorFontDarkGray</item>
        <item name="android:textSize">@dimen/_26ssp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="LoginStyleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="StyleEditText">
        <item name="android:textColor">@color/colorFontDarkGray</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="IVHeader">
        <item name="android:padding">@dimen/dimen_10</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="IVHeaderScanner">
        <item name="android:padding">@dimen/dimen_10</item>
        <item name="android:layout_width">@dimen/dimen_45</item>
        <item name="android:layout_height">@dimen/dimen_45</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ivHeader_fixed_width">
        <item name="android:padding">@dimen/dimen_5</item>
        <item name="android:layout_width">@dimen/dimen_45</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="rlHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:background">@drawable/bg_border</item>
    </style>
    <style name="cvCardView">
        <!--<item name="cardElevation">@dimen/dimen_3</item>-->
        <item name="cardCornerRadius">@dimen/dimen_4</item>
        <!--<item name="cardUseCompatPadding">true</item>-->
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">0dp</item>
        <item name="android:background">@drawable/bg_cardview_syle</item>
        <item name="contentPadding">@dimen/cardview_corner_radius</item>
        <item name="cardBackgroundColor">@color/colorGrayBorder</item>
    </style>
    <style name="rbRegistration">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/sl_radio</item>
        <item name="android:padding">@dimen/dimen_10</item>
        <item name="android:textColor">@color/colorFontDarkGray</item>
        <item name="android:textSize">@dimen/font_15</item>
    </style>
    <style name="textInputLayoutForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_20</item>
    </style>

    <style name="textInputLayoutFormLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_20</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
    </style>

    <style name="textInputLayoutBarcodeForm">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_20</item>
    </style>
    <style name="flotingLabelStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_13</item>
    </style>

    <style name="etFormEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dimen_20</item>
        <item name="android:layout_marginStart">@dimen/dimen_20</item>
        <item name="android:background">@drawable/sl_form_edittext</item>
        <item name="android:paddingBottom">@dimen/dimen_10</item>
        <item name="android:paddingTop">@dimen/dimen_10</item>
        <item name="android:textColor">@color/colorFontDarkGray</item>
        <item name="android:textSize">@dimen/font_15</item>
        <item name="android:textColorHint">@color/colorTextFiledLabel</item>
        <item name="android:drawablePadding">@dimen/dimen_5</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="etFormEditTextLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dimen_20</item>
        <item name="android:layout_marginStart">@dimen/dimen_20</item>
        <item name="android:background">@drawable/sl_form_edittext</item>
        <item name="android:paddingBottom">@dimen/dimen_10</item>
        <item name="android:paddingTop">@dimen/dimen_10</item>
        <item name="android:textColor">@color/colorFontDarkGray</item>
        <item name="android:textSize">@dimen/font_15</item>
        <item name="android:textColorHint">@color/colorTextFiledLabel</item>
        <item name="android:drawablePadding">@dimen/dimen_5</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="bvSignIn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dimen_15</item>
        <item name="android:layout_marginStart">@dimen/dimen_15</item>
        <item name="android:layout_marginTop">@dimen/dimen_25</item>
        <item name="android:background">@drawable/sl_login_btn</item>
        <item name="android:paddingBottom">@dimen/dimen_20</item>
        <item name="android:paddingTop">@dimen/dimen_15</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="bvSignInLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dimen_50</item>
        <item name="android:layout_marginStart">@dimen/dimen_50</item>
        <item name="android:layout_marginTop">@dimen/dimen_25</item>
        <item name="android:background">@drawable/sl_login_btn</item>
        <item name="android:paddingBottom">@dimen/dimen_20</item>
        <item name="android:paddingTop">@dimen/dimen_15</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="bvSelectImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dimen_15</item>
        <item name="android:layout_marginStart">@dimen/dimen_5</item>
        <item name="android:layout_marginTop">@dimen/dimen_5</item>
        <item name="android:background">@drawable/sl_login_btn</item>
        <item name="android:paddingBottom">@dimen/dimen_20</item>
        <item name="android:paddingTop">@dimen/dimen_15</item>
        <item name="paddingStart">@dimen/dimen_5</item>
        <item name="paddingEnd">@dimen/dimen_5</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="bvUpdate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#DD5619</item>
        <item name="android:paddingStart">@dimen/dimen_5</item>
        <item name="android:paddingEnd">@dimen/dimen_5</item>
        <item name="android:paddingTop">@dimen/dimen_5</item>
        <item name="android:paddingBottom">@dimen/dimen_5</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/ic_keyboard_arrow_down</item>
    </style>
</resources>
